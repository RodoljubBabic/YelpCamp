<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to YelpCamp</h1>
            <a class="btn btn-primary btn-lg"href="/campgrounds/new">Add new Campground</a>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular sites</h3>
        </div>
    </div>
    
    <div class="row text-center  display-flex">
        <% campgrounds.forEach(function(camps){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=" <%=camps.image %>">
                    <div class="caption">
                         <h4><%= camps.name %></h4>
                    </div>
                    <p>
                       <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary">More Info</a> 
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
   
</div>

<%include ../partials/footer %>